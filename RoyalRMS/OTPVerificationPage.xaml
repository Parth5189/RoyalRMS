<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoyalRMS.OTPVerificationPage"
             >
    <StackLayout Padding="25">
        <Image Source="crown1.jpg" HeightRequest="60" HorizontalOptions="Center" Margin="0,25,0,15"/>

        <Label Text="OTP Verification" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"  Margin="0,25,0,15"/>


        <Label Text="OTP" FontSize="14" FontAttributes="Bold" TextColor="#FF5733" HorizontalOptions="Start"  Margin="0,25,0,5"/>
        <Entry Placeholder="OTP" Keyboard="Numeric" />
        <Button Text="Verify" BackgroundColor="Red" TextColor="White" HorizontalOptions="Center" Margin="0,15,0,15" />
        <Label Text="Didn't Receive OTP? Sign Up" TextColor="Gray" HorizontalOptions="Center" Margin="0,5,0,15" />
    </StackLayout>
</ContentPage>