<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoyalRMS.ChangePasswordPage"
             >
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <!-- Title -->
            <Label Text="Change Password"
               FontSize="24"
               VerticalOptions="CenterAndExpand" />

            <!-- New Password Entry -->
            <Label Text="New Password" FontSize="14" FontAttributes="Bold" TextColor="#FF5733" HorizontalOptions="Start" Margin="0,25,0,5"/>
            <Entry Placeholder="New Password"
               IsPassword="true"
               Margin="0,10,0,0" />

            <!-- Confirm Password Entry -->
            <Label Text="Confirm Password" FontSize="14" FontAttributes="Bold" TextColor="#FF5733" HorizontalOptions="Start" Margin="0,25,0,5"/>
            <Entry Placeholder="Confirm New Password"
               IsPassword="true"
               Margin="0,10,0,0" />

            <!-- Change Password Button -->
            <Button Text="Change Password"
                BackgroundColor="#FF5733"
                TextColor="White"
                CornerRadius="5"
                Margin="0,20,0,0"
                Clicked="OnPasswordChangeClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>