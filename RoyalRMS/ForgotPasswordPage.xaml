<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoyalRMS.ForgotPasswordPage"
             BackgroundColor="#F5F5F5"
             >
    <VerticalStackLayout Padding="25">

            <!-- Header -->
            <StackLayout>
                <Label Text="Forgot Password"
                   FontSize="24"
                   TextColor="black"
                   VerticalOptions="CenterAndExpand" />
            </StackLayout>

        <!-- Email Entry -->
        <Label Text="Email" FontSize="14" FontAttributes="Bold" TextColor="#FF5733" HorizontalOptions="Start"  Margin="0,25,0,5"/>
        <Entry Placeholder="Enter your email"
           Keyboard="Email" />

        <!-- Send OTP Button -->
        <Button Text="Send OTP" BackgroundColor="#FF5733" TextColor="White" Pressed="SendOTPPressed"/>
        
        <!-- Footer -->
        <StackLayout Padding="20" BackgroundColor="#F5F5F5">
            <Label Text="Remember your password? Log in"
               FontSize="14"
               TextColor="#333"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand" />
        </StackLayout>
        
    </VerticalStackLayout>
</ContentPage>